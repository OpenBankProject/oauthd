{
	"name": "SinaWeibo",
	"url": "https://api.weibo.com/oauth2",
	"oauth2": {
		"authorize": "/authorize",
		"access_token": "/access_token",
		"request": {
			"query": {
				"access_token": "{{token}}"
			}
		},
		"revoke": {
			"url": "/revokeoauth2",
			"query": {
				"access_token": "{{token}}"
			}
		}
	},
	"href": {
		"keys": "http://open.weibo.com/development",
		"docs": "http://open.weibo.com/wiki/",
		"apps": "http://open.weibo.com/apps",
		"provider": "http://weibo.com"
	}
}